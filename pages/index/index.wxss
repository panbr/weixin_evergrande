.banner {
	overflow: hidden;
	position: relative;
}
.banner .cover {
	width: 100%;
	height: 375rpx;
	vertical-align: bottom;
}
.banner::before {
	content: '';
	display: block;
	position: absolute;
	left: 0;
	top: 0;
	width: 560rpx;
	height: 100%;
	background: linear-gradient(to right,rgba(0,0,0,.6) 0,rgba(0,0,0,0) 100%);
}
.banner .info {
	color: #fff;
	padding: 0 20rpx;
	position: absolute;
	bottom: 0;
	left: 0;
	height: 100%;
	width: 100%;
	z-index: 1;
	box-sizing: border-box;
}
.banner .info .h2 {
	font-size: 36rpx;
	font-weight: 600;
	line-height: 1.22;
	text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp: 2;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	margin-top: 45rpx;
}
.banner .detail {
	padding-left: 24rpx;
	position: absolute;
	left: 36rpx;
	bottom: 16rpx;
	font-size: 24rpx;
	line-height: 1;
	font-weight: bold;
	text-shadow: 2rpx 4rpx 0px rgba(0,0,0,0.20);
	border-left: 8rpx solid #4ABDCC;
}
.banner view:nth-child(2) {
	margin: 12rpx 0;
}
.news {
	margin-top: 35rpx;
}
.news .h2 {
	color: #5c5c5c;
	text-align: center;
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 30rpx;
}
.news .h2 image {
	width: 146rpx;
	height: 10rpx;
	position: relative;
	top: -4rpx;
}
.news .h2 text {
	margin:0 40rpx;
}

.news-list {
	padding: 10rpx 20rpx;
}
.news-list .news-item {
	margin-bottom: 30rpx;
}
.news-list .news-item navigator {
	font-family: 'Microsoft Yahei';
}
